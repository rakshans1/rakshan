{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- If we have a tag cover, display that - else blog cover - else nothing --}}
{{#tag}}
<section class="cover cover-author has-image" {{#if image}} style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    <div class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="cover-content-wrap align-center">
                        <h3 class="author-name">{{name}}</h3>
                        <div class="meta-info">
						<span class="post-count">Total {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</span>
						{{#if description}}
                        <p class="description">
                            {{description}}
                        </p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
</section>
{{/tag}}

{{!-- The main content area on the homepage --}}
<div class="main-content-area">
    <div class="container post-listing">
        <div class="row is-flex">

    {{!-- The tag below includes the post loop - partials/loop.hbs --}}
    {{> "loop"}}

        </div>
    </div>
    {{pagination}}
</div>
